<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.islbd.ruman.dailerapp.MainActivity"
    android:orientation="vertical">
    <fragment
        android:name="net.islbd.ruman.dailerapp.CallFragment"
        android:id="@+id/callfragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
    <fragment
        android:id="@+id/contactListFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:name="net.islbd.ruman.dailerapp.ContactListFragment"></fragment>
    <fragment
        android:id="@+id/phoneDailerFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:name="net.islbd.ruman.dailerapp.PhoneDailerFragment"></fragment>
    </LinearLayout>
</LinearLayout>
